<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/facultyloginbackground"
    tools:context=".FacultyLoginActivity2">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/facLoginTextId"
        android:layout_width="192dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="@string/facultyLoginTopText"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="@color/navy_blue"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/facultyUsernamePromptId"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/facultyUsernameId"
        android:layout_width="282dp"
        android:layout_height="48dp"
        android:hint="@string/facultyLoginUsername"
        android:inputType="text"
        android:textColorHint="@color/navy_blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facultyUsernamePromptId" />

    <TextView
        android:id="@+id/facultyUsernamePromptId"
        android:layout_width="184dp"
        android:layout_height="29dp"
        android:layout_marginTop="64dp"
        android:text="@string/facultyLoginUsernamePrompt"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/facultyUsernameId"
        app:layout_constraintTop_toBottomOf="@+id/facLoginTextId" />

    <EditText
        android:id="@+id/facultyPasswordId"
        android:layout_width="282dp"
        android:layout_height="48dp"
        android:hint="@string/facultyPassword"
        android:inputType="textPassword"
        android:textColorHint="@color/navy_blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facultyPasswordPromptId" />

    <TextView
        android:id="@+id/facultyPasswordPromptId"
        android:layout_width="184dp"
        android:layout_height="29dp"
        android:layout_marginTop="56dp"
        android:text="@string/facultyPasswordPrompt"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/facultyUsernameId"
        app:layout_constraintTop_toBottomOf="@+id/facultyUsernameId" />

    <Button
        android:id="@+id/loginButt"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="73dp"
        android:background="@color/yellow"
        android:text="@string/loginButt"
        android:textColor="@color/navy_blue"
        app:layout_constraintStart_toStartOf="@+id/facultyPasswordId"
        app:layout_constraintTop_toBottomOf="@+id/facultyPasswordId" />

    <Button
        android:id="@+id/backButt"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="26dp"
        android:background="@color/yellow"
        android:text="@string/backButt"
        android:textColor="@color/navy_blue"
        app:layout_constraintEnd_toEndOf="@+id/facultyPasswordId"
        app:layout_constraintTop_toBottomOf="@+id/facultyPasswordId" />


</androidx.constraintlayout.widget.ConstraintLayout>